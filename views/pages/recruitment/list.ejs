
<%- include('../../fragments/header.ejs') %>
<main>
    <h2>Recruitments</h2>
    <table class="table-list">

        <tr>
            <th>Status</th>
            <th>Date Opened</th>
            <th>Options</th>
        </tr>


        <tbody>
        <% for (let rec of recs) { %>
            <tr>
                <td><%= rec.status%></td>
                <td> <%= rec.dateOpened.toISOString().split('T')[0] %> </td>
                <td>
                    <ul class="list-actions">
                        <li>
                            <a href="/recruitments/details/<%= rec._id%>" class="list-actions-button-details">Details</a>
                        </li>
                        <li>
                            <a href="/recruitments/edit/<%= rec._id%>" class="list-actions-button-edit">Edit</a>
                        </li>
                        <li>
                            <a href="/recruitments/delete/<%= rec._id%>" class="list-actions-button-delete">Delete</a>
                        </li>
                    </ul>
                </td>
            </tr>
        <% } %>

        </tbody>
    </table>

    <p>
        <a href="/recruitments/add" class="button-add">Add recruitment</a>
    </p>
</main>
<%- include('../../fragments/footer.ejs') %>