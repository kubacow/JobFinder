
<%- include('../../fragments/header.ejs') %>
<main>
    <h2><%= __('rec.list.title')%></h2>
    <table class="table-list">

        <tr>
            <th><%= __('acc.fields.username')%></th>
            <th><%= __('job.fields.company-name')%></th>
            <th><%= __('rec.fields.status')%></th>
            <th><%= __('rec.fields.date-opened')%></th>
            <th><%= __('rec.list.options')%></th>
        </tr>


        <tbody>
        <% for (let rec of recs) { %>
            <tr>
                <td><%= rec.account.username%></td>
                <td><%= rec.jobOffer.companyName%></td>
                <td><%= rec.status%></td>
                <td> <%= rec.dateOpened.toISOString().split('T')[0] %> </td>
                <td>
                    <ul class="list-actions">
                        <li>
                            <a href="/recruitments/details/<%= rec._id%>" class="list-actions-button-details"><%= __('list.actions.details')%></a>
                        </li>
                        <li>
                            <a href="/recruitments/edit/<%= rec._id%>" class="list-actions-button-edit"><%= __('list.actions.edit')%></a>
                        </li>
                        <li>
                            <a href="/recruitments/delete/<%= rec._id%>" class="list-actions-button-delete"><%= __('list.actions.delete')%></a>
                        </li>
                    </ul>
                </td>
            </tr>
        <% } %>

        </tbody>
    </table>

    <p>
        <a href="/recruitments/add" class="button-add"><%= __('rec.list.addNew')%></a>
    </p>
</main>
<%- include('../../fragments/footer.ejs') %>