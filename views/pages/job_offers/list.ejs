<%- include('../../fragments/header.ejs') %>
  <main>
    <h2>Job Offers</h2>
    <table class="table-list">

      <tr>
        <th>Company</th>
        <th>Position</th>
        <th>Location</th>
        <th>Minimum Salary (PLN)</th>
        <th>Maximum Salary (PLN)</th>
        <th>Options</th>
      </tr>


      <tbody>
      <% for (let job of jobs) { %>
        <tr>
          <td><%= job.companyName %></td>
          <td> <%= job.position %> </td>
          <td> <%= job.location%></td>
          <td><%= job.minSalary ? job.minSalary : 'Minimum salary not set' %></td>
          <td><%= job.maxSalary ? job.maxSalary : 'Maximum salary not set' %></td>
          <td>
            <ul class="list-actions">
              <li>
                <a href="/job-offers/details/<%= job._id%>" class="list-actions-button-details">Details</a>
              </li>
              <li>
                <a href="/job-offers/edit/<%= job._id%>" class="list-actions-button-edit">Edit</a>
              </li>
              <li>
                <a href="/job-offers/delete/<%= job._id%>" class="list-actions-button-delete">Delete</a>
              </li>
            </ul>
          </td>
        </tr>
      <% }%>

      </tbody>
    </table>

    <p>
      <a href="/job-offers/add" class="button-add">Add new job offer</a>
    </p>
</main>
<%- include('../../fragments/footer.ejs') %>